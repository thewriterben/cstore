# Staging Environment Configuration
NODE_ENV=staging
PORT=3000

# Database - Use GitHub Secrets in CI/CD
MONGODB_URI=${MONGODB_URI_STAGING}

# JWT Secrets - Use GitHub Secrets
JWT_SECRET=${JWT_SECRET_STAGING}
JWT_REFRESH_SECRET=${JWT_REFRESH_SECRET_STAGING}
JWT_EXPIRE=1d
JWT_REFRESH_EXPIRE=7d

# Application
APP_URL=https://staging.cstore.example.com
CORS_ORIGIN=https://staging.cstore.example.com

# Email Service - Use GitHub Secrets
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=${SMTP_PORT}
SMTP_SECURE=true
SMTP_USER=${SMTP_USER}
SMTP_PASSWORD=${SMTP_PASSWORD}
SMTP_FROM_NAME=CStore Staging
SMTP_FROM_EMAIL=staging@cstore.example.com
ADMIN_EMAIL=${ADMIN_EMAIL}

# Blockchain (Testnet)
BITCOIN_NETWORK=testnet
ETHEREUM_NETWORK=sepolia
BLOCKCHAIN_API_KEY=${BLOCKCHAIN_API_KEY}

# Webhook URLs
PAYMENT_WEBHOOK_URL=https://staging.cstore.example.com/api/webhooks/payment
WEBHOOK_SECRET=${WEBHOOK_SECRET}

# Logging
LOG_LEVEL=info

# Feature Flags
ENABLE_ELASTICSEARCH=true
ENABLE_REDIS_CACHE=true
MAINTENANCE_MODE=false

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Default Language
DEFAULT_LANGUAGE=en
