# Development Environment Configuration
NODE_ENV=development
PORT=3000

# Database
MONGODB_URI=mongodb://localhost:27017/cstore_dev

# JWT Secrets
JWT_SECRET=dev-jwt-secret-change-in-production
JWT_REFRESH_SECRET=dev-refresh-secret-change-in-production
JWT_EXPIRE=1d
JWT_REFRESH_EXPIRE=7d

# Application
APP_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Email Service (Development - use MailHog or similar)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_NAME=CStore Dev
SMTP_FROM_EMAIL=dev@cstore.local
ADMIN_EMAIL=admin@cstore.local

# Blockchain (Testnet)
BITCOIN_NETWORK=testnet
ETHEREUM_NETWORK=goerli
BLOCKCHAIN_API_KEY=

# Webhook URLs
PAYMENT_WEBHOOK_URL=http://localhost:3000/api/webhooks/payment
WEBHOOK_SECRET=dev-webhook-secret

# Logging
LOG_LEVEL=debug

# Feature Flags
ENABLE_ELASTICSEARCH=false
ENABLE_REDIS_CACHE=false
MAINTENANCE_MODE=false

# Default Language
DEFAULT_LANGUAGE=en
