# Production Environment Configuration
NODE_ENV=production
PORT=3000

# Database - Use GitHub Secrets in CI/CD
MONGODB_URI=${MONGODB_URI_PRODUCTION}

# JWT Secrets - Use GitHub Secrets (MUST be strong and unique)
JWT_SECRET=${JWT_SECRET_PRODUCTION}
JWT_REFRESH_SECRET=${JWT_REFRESH_SECRET_PRODUCTION}
JWT_EXPIRE=1h
JWT_REFRESH_EXPIRE=7d

# Application
APP_URL=https://cstore.example.com
CORS_ORIGIN=https://cstore.example.com

# Email Service - Use GitHub Secrets
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=${SMTP_PORT}
SMTP_SECURE=true
SMTP_USER=${SMTP_USER}
SMTP_PASSWORD=${SMTP_PASSWORD}
SMTP_FROM_NAME=CStore
SMTP_FROM_EMAIL=noreply@cstore.example.com
ADMIN_EMAIL=${ADMIN_EMAIL}

# Blockchain (Mainnet)
BITCOIN_NETWORK=mainnet
ETHEREUM_NETWORK=mainnet
BLOCKCHAIN_API_KEY=${BLOCKCHAIN_API_KEY}

# Webhook URLs
PAYMENT_WEBHOOK_URL=https://cstore.example.com/api/webhooks/payment
WEBHOOK_SECRET=${WEBHOOK_SECRET}

# Logging
LOG_LEVEL=warn

# Feature Flags
ENABLE_ELASTICSEARCH=true
ENABLE_REDIS_CACHE=true
MAINTENANCE_MODE=false

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=50

# Security
HELMET_CSP_ENABLED=true
TRUST_PROXY=true

# Performance
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000

# Default Language
DEFAULT_LANGUAGE=en

# Monitoring
ENABLE_APM=true
SENTRY_DSN=${SENTRY_DSN}
