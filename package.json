{
  "name": "cstore",
  "version": "2.0.0",
  "description": "A production-ready cryptocurrency marketplace with real blockchain integration",
  "main": "server-new.js",
  "scripts": {
    "start": "node server-new.js",
    "start:legacy": "node server.js",
    "dev": "NODE_ENV=development node server-new.js",
    "dev:legacy": "node server.js",
    "test": "NODE_ENV=test jest --verbose --runInBand",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "lint": "eslint src/**/*.js tests/**/*.js",
    "lint:fix": "eslint src/**/*.js tests/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"tests/**/*.js\"",
    "security:audit": "npm audit --audit-level=moderate",
    "docker:build": "docker build -t cstore:latest .",
    "docker:build:dev": "docker build --target development -t cstore:dev .",
    "docker:build:prod": "docker build --target production -t cstore:prod ."
  },
  "keywords": [
    "cryptocurrency",
    "marketplace",
    "bitcoin",
    "ethereum",
    "blockchain",
    "ecommerce"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@elastic/elasticsearch": "^9.1.1",
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "bitcoin-core": "^5.0.0",
    "bitcoinjs-lib": "^6.1.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "i18next": "^25.5.2",
    "i18next-fs-backend": "^2.6.0",
    "i18next-http-middleware": "^3.8.1",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.3",
    "morgan": "^1.10.1",
    "nodemailer": "^7.0.6",
    "uuid": "^13.0.0",
    "web3": "^4.16.0",
    "winston": "^3.18.3",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^2.1.1",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^10.2.1",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  }
}
